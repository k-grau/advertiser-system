@model Advertisers.Models.AdViewModel

@{
    ViewData["Title"] = "Annonsdetaljer";
    String address = "";
    int postCode = 0;
    String city = "";
    String phone = ""; 

    if(Model.Ad.Ad_TypeId == 1)
    {
        address = Model.SubscriberContact.Address;
        city = Model.SubscriberContact.City;
        postCode = Model.SubscriberContact.Postcode;
        phone = Model.SubscriberContact.Phone;   
    }

    if(Model.Ad.Ad_TypeId == 2)
    {
        address = Model.CompanyContact.ContactAddress;
        city = Model.CompanyContact.ContactCity;
        postCode = Model.CompanyContact.ContactPostcode;
        phone = Model.CompanyContact.ContactPhone;   
    }      
}


